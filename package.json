{
  "name": "be-nodejs",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "alexandervonmalachowski",
    "email": "alexander.vonmalachowski@gmail.com",
    "url": "https://github.com/alexandervonmalachowski"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "./with-local-env.sh 'yarn run build && node out/index.js'",
    "test": "jest --ci --passWithNoTests --rootDir src",
    "test:local": "./with-local-env.sh jest --ci --rootDir src",
    "test:watch": "jest --watchAll",
    "generate": "openapi-typescript openapi/api.yaml --output src/openapi/types.ts",
    "dev": "./with-local-env.sh 'yarn run dev:db && yarn run dev:app'",
    "dev:app": "./with-local-env.sh 'nodemon'",
    "dev:db": "docker-compose -f docker-compose-test-dependencies.yml up -d --build",
    "compose": "./with-local-env.sh docker-compose up --build",
    "check": "yarn run format:check && yarn run lint:check",
    "fix": "yarn run format:fix && yarn run lint:fix",
    "lint:check": "eslint --ignore-path .gitignore --ignore-pattern src/openapi/types.ts --max-warnings 0 .",
    "lint:fix": "eslint --ignore-path .gitignore --ignore-pattern src/openapi/types.ts --fix .",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --ignore-path .gitignore --write .",
    "format:sql": "sql-formatter -l postgresql --lines-between-queries 2"
  },
  "dependencies": {
    "ajv": "^8.1.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.8",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "postgres-migrations": "^5.1.1",
    "slonik": "^24.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.10",
    "@types/pg": "^8.6.0",
    "@types/pg-format": "^1.0.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.2.3",
    "jest-openapi": "^0.13.0",
    "nodemon": "^2.0.7",
    "openapi-typescript": "^3.2.3",
    "prettier": "2.2.x",
    "sql-formatter": "^4.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-json-schema-generator": "^0.92.0",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.2.4"
  },
  "packageManager": "yarn@3.1.1",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  }
}
